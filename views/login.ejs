<html>
    <head>
        <title>Login</title>
        <link rel="stylesheet" href="/css/login.css" />
    </head>
    <body>
        <h1>IT Academy</h1>
        <% if (send) { %>
        <h3>Commencez par vous connecter</h3>
        <% } %>
        <h2>Entrez votre pseudo</h2>
        <form id="loginForm">
            <input type="text" id="userInput" name="user" required />
            <input type="button" value="Enregistrer" onclick="displayUsername()" />
        </form>
        <h2 id="displayPseudo" style="display:none;"></h2>

        <script>
            function displayUsername() {
                const userInput = document.getElementById('userInput').value;
                const displayElement = document.getElementById('displayPseudo');

                if (userInput) {
                    displayElement.style.display = 'block';
                    displayElement.innerHTML = 'Pseudo: ' + userInput;
                }
            }
        </script>
    </body>
</html>
